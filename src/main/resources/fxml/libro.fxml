<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="759.0" prefWidth="1253.0" xmlns="http://javafx.com/javafx/17.0.12"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.libro.LibroController">

  <bottom>
    <VBox spacing="12">
      <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
      </padding>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="930.0">
        <Label alignment="CENTER" contentDisplay="TOP" prefHeight="20.0" prefWidth="121.0"
          text="Agregar Producto">
          <font>
            <Font size="14.0"/>
          </font>
        </Label>
      </HBox>
      <GridPane hgap="10" vgap="10">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" minWidth="100"/>
          <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Codigo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCodigo" promptText="Ej: A123" GridPane.columnIndex="1"
          GridPane.rowIndex="0"/>

        <Label text="Titulo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtTitulo" promptText="Ej: Analisis matemático 1" GridPane.columnIndex="1"
          GridPane.rowIndex="1"/>

        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtAutor" promptText="Ej: Maxwel" GridPane.columnIndex="1"
          GridPane.rowIndex="2"/>

        <Label text="Paginas:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtPaginas" promptText="Ej: Maxwel" GridPane.columnIndex="1"
          GridPane.rowIndex="3"/>

        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtPrecio" promptText="Ej: 10.5" GridPane.columnIndex="1"
          GridPane.rowIndex="4"/>
      </GridPane>
      <HBox alignment="CENTER" prefHeight="6.0" prefWidth="930.0">
        <Button onAction="#onAgregarLibro"
          style="-fx-background-color: #2b6cb0; -fx-text-fill: white; -fx-font-weight: bold;"
          text="Agregar">
          <font>
            <Font size="14.0"/>
          </font>
        </Button>
      </HBox>
    </VBox>
  </bottom>
  <top>
    <Label maxWidth="Infinity"
      style="-fx-background-color: #2a4365; -fx-text-fill: white; -fx-padding: 15;"
      text="Gestión de Produtos" BorderPane.alignment="CENTER">
      <font>
        <Font size="20"/>
      </font>
    </Label>
  </top>
  <center>
    <VBox spacing="10" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
      </padding>
      <AnchorPane VBox.vgrow="ALWAYS">
        <TableView fx:id="tablaLibros" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <columns>
            <TableColumn fx:id="colCodigo" prefWidth="150" text="Codigo"/>
            <TableColumn fx:id="colTitulo" prefWidth="300" text="Nombre"/>
            <TableColumn fx:id="colAutor" prefWidth="100" text="Categoria"/>
            <TableColumn fx:id="colPrecio" prefWidth="200" text="Precio"/>
            <TableColumn fx:id="colPaginas" prefWidth="200" text="Stock"/>
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
          </columnResizePolicy>
        </TableView>
      </AnchorPane>
      <HBox prefHeight="23.0" prefWidth="602.0" spacing="10.0">
        <Button onAction="#onListarTitulosConMasDe300Paginas"
          style="-fx-background-color: #348cda; -fx-text-fill: white;" text="Mas de 300 paginas"/>
        <Button onAction="#onCalcularPromedioPaginas"
          style="-fx-background-color: #348cda; -fx-text-fill: white;"
          text="Ver promedio de paginas"/>
        <Button mnemonicParsing="false" onAction="#onObtenerLibroMasCaro"
          style="-fx-background-color: #348cda; -fx-text-fill: white;"
          text="Ver libro mas caro"/>
        <Button mnemonicParsing="false" onAction="#onContarLibrosPorAutor"
          style="-fx-background-color: #348cda; -fx-text-fill: white;" text="Ver libros por autor"/>
        <Button mnemonicParsing="false" onAction="#onMostrarTodos" text="Mostrar todos"/>
        <Button mnemonicParsing="false" onAction="#onGenerarListaRandom" text="Generar Aleatorios"/>
      </HBox>
      <ScrollPane prefHeight="200.0" prefWidth="200.0">
        <content>
          <AnchorPane>
            <children>
              <Label fx:id="infoEstadisticas"/>
            </children>
          </AnchorPane>
        </content>
      </ScrollPane>
    </VBox>
  </center>

</BorderPane>
